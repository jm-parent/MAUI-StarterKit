<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyStarterKit.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MyStarterKit.Views"
    xmlns:local="clr-namespace:MyStarterKit">

    <TabBar>
        <ShellContent
            Title="Main"
            Icon="iconblank.png"
            ContentTemplate="{DataTemplate views:MainPage}" />
        <ShellContent
            Title="Localization"
            Icon="iconlocalization.png"
            ContentTemplate="{DataTemplate views:LocalizationPage}" />
        <ShellContent
            Title="Sample"
            Icon="iconsample.png"
            ContentTemplate="{DataTemplate views:SamplePage}" />
        <ShellContent
            Title="ListDetailSample"
            Icon="iconlistdetail.png"
            ContentTemplate="{DataTemplate views:ListDetailSamplePage}" />
        <ShellContent
            Title="DrawingSample"
            Icon="icondrawing.png"
            ContentTemplate="{DataTemplate views:DrawingSamplePage}" />
        <ShellContent
            Title="WebViewSample"
            Icon="iconwebview.png"
            ContentTemplate="{DataTemplate views:WebViewSamplePage}" />
    </TabBar>
</Shell>
